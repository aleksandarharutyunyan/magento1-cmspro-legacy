<widgets>
    <cmspro_cmscategory_view type="bialsoft_cmspro/cmscategory_widget_view" translate="name description" module="bialsoft_cmspro">
        <name>Category view</name>
        <description>Category view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmscategory_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>bialsoft_cmspro/adminhtml_cmscategory_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </cmscategory_id>
        </parameters>
    </cmspro_cmscategory_view>
    <cmspro_cmscategory_link type="bialsoft_cmspro/cmscategory_widget_link" translate="name description" module="bialsoft_cmspro">
        <name>Category link</name>
        <description>Category link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmscategory_id type="complex" translate="label">
                <visible>1</visible>
