        <name>Article view</name>
        <description>Article view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <article_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Article</label>
                <type>label</type>
                <helper_block>
                    <type>bialsoft_cmspro/adminhtml_article_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Article</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </article_id>
        </parameters>
    </cmspro_article_view>
    <cmspro_article_link type="bialsoft_cmspro/article_widget_link" translate="name description" module="bialsoft_cmspro">
        <name>Article link</name>
        <description>Article link widget</description>
