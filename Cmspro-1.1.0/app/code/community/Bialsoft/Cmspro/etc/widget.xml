                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </cmscategory_id>
            <recursion type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <value>0</value>
                <label>Levels to show (0 for all)</label>
                <type>text</type>
                <sort_order>20</sort_order>
            </recursion>
        </parameters>
    </cmspro_cmscategory_subtree>
