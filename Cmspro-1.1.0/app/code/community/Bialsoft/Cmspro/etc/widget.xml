                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </article_id>
        </parameters>
    </cmspro_article_link>
    <cmspro_cmscategory_subtree type="bialsoft_cmspro/cmscategory_widget_subtree" translate="name description" module="bialsoft_cmspro">
        <name>Category subtree</name>
        <description>Category subtree widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmscategory_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>bialsoft_cmspro/adminhtml_cmscategory_widget_chooser</type>
